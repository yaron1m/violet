{
  "name": "violet",
  "version": "3.0.3",
  "description": "Customer Relationship Manager for C-Point LTD",
  "main": "server.js",
  "scripts": {
    "client": "npm start --prefix client",
    "client-build": "npm run build --prefix client",
    "client-deploy": "npm test && npm run client-build && firebase deploy -P default",
    "client-deploy-dev": "npm test && npm run client-build && firebase deploy -P development",
    "install-all": "npm install && npm install --prefix client",
    "lint": "eslint client/src --fix",
    "test": "jest",
    "watch": "jest --watch"
  },
  "author": "Yaron Malin",
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^5.4.0",
    "eslint-config-google": "^0.10.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-react": "^7.7.0",
    "firebase-tools": "^4.2.1",
    "jest": "^23.5.0"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|\\.tests\\.js$)"
  }
}
